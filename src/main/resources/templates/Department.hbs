{{#partial "content"}}

    <div class="container-fluid allDepartments">
        <div class="row">
            {{#if Departments}}
                {{#each Departments}}
            <div class="col-lg-4">
               <a href="/Department/{{id}}">
                  <div class="card">

                      <div class="card-body">
                         <div class="mask flex-center rgba-black-strong">
                             <h2>{{Description}}</h2><br>
                                </div>
                              <div class="card-text">
                                 <p class="card-title">{{Name}}</p><br>

                              </div>
                              </div>
                          </div>
                        </a>
                       </div>

            {{else}}
                <p>No Department Available</p>
            {{/if}}
        </div>
    </div>
    </div>
{{/partial}}
{{> layout.hbs}}